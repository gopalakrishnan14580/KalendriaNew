<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#D6D6D6"
    android:padding="8dp">

    <!-- Thumbnail Image -->
  <!--  <com.kalendria.kalendria.utility.CircularNetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/faverote_icon"
        android:layout_marginRight="8dp" />-->
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/faverote_icon"
        android:layout_marginRight="8dp" />

    <RatingBar
        android:id="@+id/rating"
        android:progressDrawable="@drawable/star_rating_small"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/thumbnail"
        android:numStars="5"
        android:stepSize="0.5" />


    <TextView
        android:id="@+id/faverote_venu_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="murugan"
        android:textColor="#000"
        android:textStyle="normal"
        android:textSize="@dimen/_12sdp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/rating"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/faverote_venu_location_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:text="two asdf asdf asdf asdf asdf"
        android:layout_weight="0.2"
        android:textColor="@color/colorSkyBlue"
        android:textStyle="normal"
        android:textSize="@dimen/_12sdp" />



    <TextView
        android:id="@+id/faverote_review_count_txt"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_weight="0.8"
        android:text="99 Reviews"
        android:gravity="right"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12sdp" />

    </LinearLayout>

</RelativeLayout>