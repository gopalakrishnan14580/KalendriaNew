<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/service_child"
            android:layout_width="0dp"
            android:minHeight="@dimen/_35sdp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_marginLeft="@dimen/_2sdp"
            android:gravity="left|center|center_vertical"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/_3sdp"
            android:text="Category"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:id="@+id/infoLayout"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/info_button"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:background="@drawable/info_small"
            android:layout_width="14dp"
            android:layout_height="14dp" />
        </RelativeLayout>



        <TextView
            android:id="@+id/service_duration"
            android:layout_width="60dp"
            android:layout_height="@dimen/_25sdp"
            android:background="#CDEAF8"
            android:layout_gravity="center_vertical"
            android:gravity="center|center_vertical"
            android:text="30:44"
            android:textColor="#000" />

        <TextView
            android:id="@+id/service_discount"
            android:layout_width="70dp"
            android:layout_height="@dimen/_25sdp"
            android:background="#7FCBED"
            android:gravity="center|center_vertical"

            android:text="100 AED"
            android:layout_gravity="center_vertical"
            android:textColor="#000" />

        <TextView
            android:id="@+id/service_price"
            android:layout_width="80dp"
            android:layout_height="@dimen/_25sdp"
            android:background="#0098DC"
            android:layout_gravity="center_vertical"
            android:gravity="center|center_vertical"

            android:text="500AED"
            android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout>